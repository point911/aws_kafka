aws:
  security_groups:
    - name: "kafka_cluster"
      rules:
        - proto: tcp
          from_port: 22
          to_port: 22
          cidr_ip: 0.0.0.0/0
        - proto: tcp
          from_port: 9092
          to_port: 9092
          cidr_ip: 0.0.0.0/0
      rules_egress:
        - proto: all
          cidr_ip: 0.0.0.0/0

      description: This is a security group for kafka training instances

  instances:

    - name: "kafka_app0"
      inventory_group: "kafka_cluster"
      instance_type: "t2.medium"
      security_group: "[u'kafka_cluster']"

    - name: "kafka_app1"
      inventory_group: "kafka_cluster"
      instance_type: "t2.medium"
      security_group: "[u'kafka_cluster']"

    - name: "kafka_app2"
      inventory_group: "kafka_cluster"
      instance_type: "t2.medium"
      security_group: "[u'kafka_cluster']"

  keypair: "kafka_cluster"

  region: "us-west-2"

